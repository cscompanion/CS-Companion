<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="10dp"
    >


    <CheckBox
        android:id="@+id/checkboxİsChecked"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="18dp" />

    <EditText
        android:id="@+id/icerik_editext"
        android:layout_width="281dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="18dp"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/checkboxİsChecked"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/create_timeforUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="54dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icerik_editext"
        android:layout_marginLeft="36dp"
        tools:ignore="SmallSp" />


</androidx.constraintlayout.widget.ConstraintLayout>